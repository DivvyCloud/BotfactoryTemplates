{
    "uuid": "divvy.database_instance_retention_policy",
    "name": "Database Retention Policy",
    "category": "Best Practices",
    "description": "Identifies database instances with a retention policy that is too low",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {
                    "days": 7
                },
                "name": "divvy.query.database_data_retention_policy_at_least"
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "dbinstance"
        ],
        "schedule": {
            "_type": "Daily",
            "time_of_day": {"_type": "TimeOfDay", "second": 0, "minute": 0, "hour": 4},
            "exclude_days": []
        }
    }
}
