{
    "uuid": "divvy.tag_audit",
    "name": "Tag Audit",
    "category": "Best Practices",
    "description": "Enforce tagging standards and policy across select resource types",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {
                    "case_sensitive": false,
                    "match_all": true,
                    "tag_keys": [
                        "Environment",
                        "POC"
                    ]
                },
                "name": "divvy.query.resource_has_tag_key"
            },
            {
                "config": {
                    "case_sensitive": false,
                    "tag_key": "Environment",
                    "tag_values": [
                        "Production",
                        "QA",
                        "Development",
                        "Staging"
                    ]
                },
                "name": "divvy.filter.validate_tag_value"
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "instance",
            "storagecontainer",
            "privatenetwork",
            "mcinstance",
            "dbinstance"
        ],
        "schedule": {
            "_type": "Daily",
            "time_of_day": {"_type": "TimeOfDay", "second": 0, "minute": 0, "hour": 3},
            "exclude_days": []
        }
    }
}