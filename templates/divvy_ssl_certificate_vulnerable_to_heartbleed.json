{
    "uuid": "divvy.ssl_certificate_vulnerable_to_heartbleed",
    "name": "SSL Certificate Heartbleed Vulnerability",
    "category": "Security",
    "description": "Identify SSL certificates which may be vulnerable to SSL Heartbleed",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": true
            }
        ],
        "filters": [
            {
                "name": "divvy.filter.ssl_certificate_older_than",
                "config": {
                    "date": u"2014-04-03T04:00:00.000Z"
                }
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created",
            "divvycloud.resource.modified"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "servicecertificate"
        ]
    }
}
