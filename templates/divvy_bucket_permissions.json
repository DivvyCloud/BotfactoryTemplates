{
    "uuid": "divvy.bucket_permissions",
    "name": "S3 Bucket Permissions",
    "category": "Security",
    "description": "Identify buckets exposing data with permissive access lists",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {
                    "permissions_list": [
                        "FULL_CONTROL",
                        "WRITE",
                        "READ"
                    ]
                },
                "name": "divvy.filter.bucket_permissions_list",
                "negate": false
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created",
            "divvycloud.resource.modified"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "storagecontainer"
        ],
        "schedule": {
            "_type": "Daily",
            "time_of_day": {"_type": "TimeOfDay", "second": 0, "minute": 0, "hour": 4},
            "exclude_days": []
        }
    }
}