{
    "uuid": "divvy.region_audit",
    "name": "Region Audit",
    "category": "Best Practices",
    "description": "Audit select resource types across specific cloud regions",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {
                    "regions_list": [
                        "us-east-1",
                        "us-west-1",
                        "us-west-2"
                    ]
                },
                "name": "divvy.filter.resource_in_regions"
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "instance",
            "dbinstance",
            "mcinstance",
            "volume",
            "snapshot",
            "storagecontainer"
        ],
        "schedule": {
            "_type": "Daily",
            "time_of_day": {"_type": "TimeOfDay", "second": 0, "minute": 0, "hour": 3},
            "exclude_days": []
        }
    }
}