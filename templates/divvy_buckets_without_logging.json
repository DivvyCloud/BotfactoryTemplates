{
    "uuid": "divvy.buckets_without_logging",
    "name": "S3 Bucket Logging",
    "category": "Security",
    "description": "Identify buckets without object logging enabled",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {},
                "name": "divvy.filter.bucket_supports_logging"
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created",
            "divvycloud.resource.modified"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "storagecontainer"
        ]
    }
}