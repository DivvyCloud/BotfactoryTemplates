{
    "uuid": "divvy.database_instance_manual_snapshots",
    "name": "Database Recently Snapshot",
    "category": "Best Practices",
    "description": "Identifies database instances with a recent manual snapshot",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {
                    "maximum_days": 14
                },
                "name": "divvy.filter.database_instance_manual_snapshots"
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created",
            "divvycloud.resource.modified"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "dbinstance"
        ]
    }
}
