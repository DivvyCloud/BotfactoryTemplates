{
    "uuid": "divvy.bucket_global_acl_permission",
    "name": "Storage Containers Global ACL Permissions",
    "category": "Security",
    "description": "Identify storage containers, e.g., AWS S3 buckets, that "
                   "permit the world view/modify privileges to access list "
                   "policies",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": true
            }
        ],
        "filters": [
            {
                "config": {
                    "permissions_list": [
                        "READ_ACP",
                        "WRITE_ACP"
                    ]
                },
                "name": "divvy.query.storage_containers_open_to_world"
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created",
            "divvycloud.resource.modified"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "storagecontainer"
        ]
    }
}
