{
    "uuid": "divvy.bucket_max_size",
    "name": "S3 Bucket Max Size",
    "category": "Optimization",
    "description": "Identify buckets which exceed a total size of 1TB",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": true
            }
        ],
        "filters": [
            {
                "config": {
                    "container_size": 1024
                },
                "name": "divvy.filter.bucket_supports_logging",
                "negate": false
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.modified"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "storagecontainer"
        ]
    }
}