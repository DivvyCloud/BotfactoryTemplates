{
    "uuid": "divvy.buckets_without_object_versioning",
    "name": "Storage Container Versioning",
    "category": "Security",
    "description": "Identify storage containers, e.g., AWS S3 buckets, without "
                   "object versioning enabled",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {},
                "name": "divvy.filter.bucket_supports_versioning"
            }
        ],
        "groups": [],
        "hookpoints": [
            "divvycloud.resource.created",
            "divvycloud.resource.modified"
        ],
        "ondemand_enabled": true,
        "resource_types": [
            "storagecontainer"
        ]
    }
}