{
    "uuid": "divvy.redshift_retention_policy",
    "name": "Redshift Retention Policy",
    "category": "Security",
    "description": "Identifies database instances with a retention policy that is too low",
    "instructions": {
        "actions": [
            {
                "config": {},
                "name": "divvy.action.mark_non_compliant",
                "run_when_result_is": false
            }
        ],
        "filters": [
            {
                "config": {
                    "days": 7
                },
                "name": "divvy.query.database_data_retention_policy_at_least"
            }
        ],
        "groups": [],
        "hookpoints": [],
        "ondemand_enabled": true,
        "resource_types": [
            "bigdatainstance"
        ]
    }
}
